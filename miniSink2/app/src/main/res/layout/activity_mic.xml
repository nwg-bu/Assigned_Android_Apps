<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sse.minisink.MicActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Speech to Text"
        android:id="@+id/txtSpeectToText"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgBtnTalkToMe"
        android:src="@drawable/iconmicrophone"
        android:scaleType="fitXY"
        android:clickable="true"
        android:onClick="onAnyButtonClick"
        android:layout_marginLeft="95dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtTalkToMe"
        android:layout_marginTop="22dp"
        android:layout_above="@+id/imgBtnTalkToMe"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtSpeectToText"
        android:layout_alignParentEnd="true"
        android:hint="Talk to me, I will listen." />
</RelativeLayout>
